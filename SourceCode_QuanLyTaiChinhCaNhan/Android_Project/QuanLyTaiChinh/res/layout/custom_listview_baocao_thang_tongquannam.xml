<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trang"
    android:padding="7dp"
    android:gravity="center" 
    android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvThang_CL_BCT_TQN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mauden"
                android:textStyle="normal"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvNam_CL_BCT_TQN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal" 
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvThuNhap_CL_BCT_TQN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_thunhap"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="right" />

            <TextView
                android:id="@+id/tvChiTieu_CL_BCT_TQN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_chitieu"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/tvTong_CL_BCT_TQN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_thunhap"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="right" />

        </LinearLayout>
</LinearLayout>
