<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trang"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thunhap"
            android:textColor="@color/tab_thunhap"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvThuNhap_CL_BC_BCTQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/tab_thunhap"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chitieu"
            android:textColor="@color/tab_chitieu"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvChiTieu_CL_BC_BCTQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/tab_chitieu"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xanhduong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp"
    	android:paddingTop="2dp"  >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tong"
            android:textColor="@color/xanhduong"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvTong_CL_BC_BCTQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/tab_thunhap"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

</LinearLayout>