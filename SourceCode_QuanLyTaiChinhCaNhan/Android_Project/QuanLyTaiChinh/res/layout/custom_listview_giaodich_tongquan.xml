<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trang"
    android:gravity="center|left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tongquan"
        android:textColor="@color/mauden"
        android:textSize="16sp"
        android:textStyle="normal"
    	android:paddingTop="7dp"
    	android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chamvaodexembaocaodaydu"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/xanhduong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/thunhap"
            android:textSize="16sp"
            android:textColor="@color/tab_thunhap"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvThuNhap_CL_GD_TQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="@color/tab_thunhap"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/chitieu"
            android:textSize="16sp"
            android:textColor="@color/tab_chitieu"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvChiTieu_CL_GD_TQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="@color/tab_chitieu"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/xanhduong"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:layout_marginLeft="7dp"
    	android:layout_marginRight="7dp"
    	android:paddingTop="2dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:text="@string/tong"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/xanhduong" />

        <TextView
            android:id="@+id/tvTong_CL_GD_TQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:textSize="20sp"
            android:gravity="right"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>