<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xanhduong"
    android:padding="7dp" >
    
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/btnQuayLai_BC_BCT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/quaylai"
            android:src="@drawable/ic_quaylai" />

        <TextView
            android:id="@+id/tvTieuDe_BC_BCT"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/btnQuayLai_BC_BCT"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/doimatkhau"
            android:textColor="@color/trang"
            android:textSize="20sp" />
    </RelativeLayout>

<ListView
    android:id="@+id/lvDanhSach_BC_BCT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trangxanh"
    android:layout_marginTop="10dp">
</ListView>
    
</LinearLayout>
