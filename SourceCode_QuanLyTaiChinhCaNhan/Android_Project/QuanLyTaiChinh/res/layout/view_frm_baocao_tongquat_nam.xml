<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xanhduong"
    android:orientation="vertical"
    android:padding="7dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/btnQuayLai_BC_TQN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/quaylai"
            android:src="@drawable/ic_quaylai" />

        <TextView
            android:id="@+id/tvTieuDe_BC_TQN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/btnQuayLai_BC_TQN"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/baocaonam"
            android:textColor="@color/trang"
            android:textSize="20sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trang"
        android:gravity="center_vertical" >

         <ImageButton
            android:id="@+id/btnTruNam_BC_TQN"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/trunam"
            android:src="@drawable/ic_tru_nam" />
        <TextView
            android:id="@+id/tvNam_BC_TQN"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/btnTruNam_BC_TQN"
            android:layout_toLeftOf="@+id/btnCongNam_BC_TQN"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/xanhduong"
            android:textSize="20sp" />
        
         <ImageButton
            android:id="@+id/btnCongNam_BC_TQN"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/congnam"
            android:src="@drawable/ic_cong_nam" />
    </RelativeLayout>

     <ListView
         android:id="@+id/lvDanhSachBaoCao_BC_TQN"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/trang" >
     </ListView>

</LinearLayout>