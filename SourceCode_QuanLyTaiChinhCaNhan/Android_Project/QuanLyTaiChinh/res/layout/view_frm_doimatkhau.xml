<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/xanhduong"
    android:orientation="vertical"
    android:padding="7dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/btnQuayLai_DMK"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/quaylai"
            android:src="@drawable/ic_quaylai" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/btnQuayLai_DMK"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/doimatkhau"
            android:textColor="@color/trang"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/trang"
        android:orientation="vertical"
        android:padding="5dp" >

        <EditText
            android:id="@+id/etMatKhauCu_DMK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:hint="@string/matkhaucu"
            android:inputType="textPassword"
            android:padding="5dp"
            android:radius="3dp"
            android:textSize="20sp" >
        </EditText>

        <EditText
            android:id="@+id/etMatKhauMoi_DMK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:hint="@string/matkhaumoi"
            android:inputType="textPassword"
            android:padding="5dp"
            android:radius="3dp"
            android:textSize="20sp" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnDoiMatKhau_DMK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/xanhduong"
                android:padding="5dp"
                android:text="@string/doimatkhau"
                android:textColor="@color/trang"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>